# Docker Environment Variables
# Copy this file to .env and update with your values

# Flask Configuration
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
FLASK_ENV=production

# PostgreSQL Database Configuration (using host system database)
# On macOS/Windows Docker Desktop: use host.docker.internal
# On Linux: use host.docker.internal or your host IP address
POSTGRES_HOST=host.docker.internal
POSTGRES_PORT=5432
POSTGRES_DB=smart_cctv
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# MongoDB Configuration (using host system database)
# On macOS/Windows Docker Desktop: use host.docker.internal
# On Linux: use host.docker.internal or your host IP address
MONGODB_HOST=host.docker.internal
MONGODB_PORT=27017
MONGODB_DB=smart_cctv_metadata

# CORS Configuration (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:80

# Port Configuration
BACKEND_PORT=5001
FRONTEND_PORT=3000

# Upload Configuration
MAX_CONTENT_LENGTH=1073741824

